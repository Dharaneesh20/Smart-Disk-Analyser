{
  "name": "smart-disk-analyzer",
  "version": "1.0.0",
  "description": "Free Open Source Disk & Partition Manager for Windows & Linux",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win --x64",
    "build:win32": "electron-builder --win --ia32",
    "build:linux": "electron-builder --linux deb",
    "build:linux-all": "electron-builder --linux deb rpm AppImage",
    "pack": "electron-builder --dir"
  },
  "build": {
    "appId": "com.diskanalyzer.app",
    "productName": "Smart Disk Analyzer",
    "copyright": "Copyright Â© 2025",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "requestedExecutionLevel": "requireAdministrator",
      "sign": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Smart Disk Analyzer",
      "license": "../LICENSE"
    },
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "System;Utility",
      "maintainer": "dharaneeshrs777@gmail.com",
      "vendor": "Smart Disk Analyzer Team",
      "synopsis": "Free Open Source Disk & Partition Manager",
      "description": "Smart Disk Analyzer provides disk space analysis, partition management, duplicate file detection, and system health monitoring for Linux systems.",
      "desktop": {
        "Name": "Smart Disk Analyzer",
        "Comment": "Disk & Partition Manager",
        "Categories": "System;Utility;FileTools;",
        "Keywords": "disk;partition;cleanup;storage;analyzer;",
        "StartupNotify": "true"
      }
    },
    "deb": {
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3",
        "openjdk-17-jre | openjdk-18-jre | openjdk-19-jre"
      ],
      "compression": "xz",
      "priority": "optional"
    },
    "files": [
      "**/*",
      "!**/{.git,.gitignore,.vscode,node_modules,package-lock.json}"
    ],
    "extraResources": [
      {
        "from": "../backend/target/disk-cleanup-partition-assistant-1.0.0.jar",
        "to": "backend.jar"
      },
      {
        "from": "../frontend/build",
        "to": "frontend"
      }
    ],
    "directories": {
      "output": "dist"
    }
  },
  "author": {
    "name": "Dharaneesh20",
    "email": "dharaneeshrs777@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "find-process": "^1.4.7"
  }
}
